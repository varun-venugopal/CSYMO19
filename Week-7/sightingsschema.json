{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Sightings Report",
	"description": "Reports of rare animal sightings in Exland",
	"type": "object",
	"properties" : {
		"sightings" : {
			"type" : "array",
			"items" : {
				"type" : "object",
				"properties" :  {
					"id": {"type" : "integer"},
					"animal" : {"type" : "string","enum":["Beaver","Hare","Pine Martin","Otter","Snowy Owl"]},
					"number" : {"type" : "integer"},
					"date" : {"type" : "string"},
					"time" : {"type" : "string"},
					"observer": {"type" : "object",
					"properties" : {
						"name" : {"type": "string"},
						"email" : {"type" : "string"}
					}
				},
					"observations" : {"type" : "string"}
				}
			}
		}
	}
}